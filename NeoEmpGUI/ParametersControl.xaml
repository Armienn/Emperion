<UserControl x:Class="NeoEmpGUI.ParametersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
	<StackPanel>
		<StackPanel.Background>
			<SolidColorBrush Color="#FFF1EDED"/>
		</StackPanel.Background>
		<Label Content="Parameters"/>
		<Separator />
		<Grid>
			<Label Content="Seed:"/>
			<TextBox Height="23" Margin="50,2,10,0" TextWrapping="Wrap" TextChanged="TextBoxEnsureIntegers"/>
		</Grid>
		<Grid>
			<Label Content="X:"/>
			<TextBox Height="23" Margin="30,2,10,0" TextWrapping="Wrap" TextChanged="TextBoxEnsureIntegers"/>
		</Grid>
		<Grid>
			<Label Content="Y:"/>
			<TextBox Height="23" Margin="30,2,10,0" TextWrapping="Wrap" TextChanged="TextBoxEnsureIntegers"/>
		</Grid>
		<Grid>
			<Label Content="Z:"/>
			<TextBox Height="23" Margin="30,2,10,0" TextWrapping="Wrap" TextChanged="TextBoxEnsureIntegers"/>
		</Grid>
		<Button Content="Generate World" Margin="10,10,10,0"/>
	</StackPanel>
</UserControl>
